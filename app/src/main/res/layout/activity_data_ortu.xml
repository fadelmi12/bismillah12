            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="#DDDDDD" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/ic_baseline_person_16"
            android:drawablePadding="6dp"
            android:fontFamily="@font/ubunturegular"
            android:gravity="center_vertical"
            android:text="NPM : "
            android:textAlignment="gravity"
            android:textColor="@android:color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/NPM2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="4dp"
            android:drawableEnd="@drawable/ic_baseline_person_16"
            android:drawablePadding="6dp"
            android:drawableTint="@android:color/transparent"
            android:fontFamily="@font/ubunturegular"
            android:gravity="center_vertical"
            android:text=""
            android:textAlignment="gravity"
            android:textColor="@android:color/black"
            android:textSize="12dp"  />

        <TextView
            android:id="@+id/angkatanDtOrtu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NPM2"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/ic_baseline_verified_user_24"
            android:drawablePadding="6dp"
            android:fontFamily="@font/ubunturegular"
            android:gravity="center_vertical"
            android:text=""
            android:textAlignment="gravity"
            android:textColor="@android:color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/prodiDtOrtu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/angkatanDtOrtu"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/ic_baseline_flag_16"
            android:drawablePadding="6dp"
            android:fontFamily="@font/ubunturegular"
            android:gravity="center_vertical"
            android:text=""
            android:textAlignment="gravity"
            android:textColor="@android:color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/kotaDtOrtu"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/angkatanDtOrtu"
            android:layout_alignStart="@+id/garis"
            android:layout_marginStart="6dp"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/ic_baseline_location_on_24"
            android:drawablePadding="6dp"
            android:fontFamily="@font/ubunturegular"
            android:gravity="center_vertical"
            android:text=""
            android:textAlignment="gravity"
            android:textColor="@android:color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/noDtOrtu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NPM2"
            android:layout_alignStart="@+id/garis"
            android:layout_marginStart="6dp"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/ic_baseline_local_phone_24"
            android:drawablePadding="6dp"
            android:fontFamily="@font/ubunturegular"
            android:gravity="center_vertical"
            android:text=""
            android:textAlignment="gravity"
            android:textColor="@android:color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/kelas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/garis"
            android:layout_marginStart="6dp"
            android:layout_marginTop="4dp"
