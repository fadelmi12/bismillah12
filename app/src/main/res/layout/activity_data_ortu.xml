<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".DataOrtu">
    <Button
        android:id="@+id/btnUbahDtDr"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/roundcorner"
        android:drawableStart="@drawable/ic_baseline_edit_24"
        android:drawableTint="@color/white"
        android:fontFamily="@font/ubunturegular"
        android:text="ubah data ortu"
        android:gravity="center"
        android:textColor="@color/white"
        android:paddingLeft="14dp"
        android:textSize="12dp"
        android:textStyle="bold"
        android:paddingRight="7dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toStartOf="@+id/btnktp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2" />

    <Button
        android:id="@+id/btnktp"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/roundcorner"
        android:drawableStart="@drawable/ic_baseline_publish_24"
        android:drawableTint="@color/white"
        android:paddingLeft="14dp"
        android:paddingRight="7dp"
        android:fontFamily="@font/ubunturegular"
        android:gravity="center"
        android:text="upload Scan ktp"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnUbahDtDr"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2" />
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/ungu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/btn_backHomeDtOrtu"
            android:layout_centerVertical="true"
            android:layout_marginLeft="35dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_baseline_arrow_back_ios_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/ubunturegular"
            android:text="Data Orang Tua"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
