<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".WisudaFragment">

    <RelativeLayout
        android:id="@+id/view12"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/ungu">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/ubunturegular"
            android:text="Wisuda"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />
    </RelativeLayout>

    <LinearLayout
        android:paddingTop="50dp"
        android:id="@+id/layoutNPM"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        app:layout_constraintWidth_percent=".9">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubunturegular"
            android:text="NPM"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtNpmWisuda"
            android:editable="false"
            android:layout_marginLeft="-4dp"
            android:paddingTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubunturegular"
            android:text=""
            android:inputType="none"
            android:textColor="@android:color/black"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/view12"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <Button
            android:textSize="13dp"
            android:id="@+id/btnBahasa"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_bahasa"
            android:drawableTint="@android:color/black"
            android:gravity="top"
            android:text="Bahasa Internasional"
            android:textAlignment="center"
            android:textAllCaps="false"
            tools:ignore="RtlCompat" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/view12"
        android:orientation="vertical">
        <Button
            android:id="@+id/btnPrestasi"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:drawableTop="@drawable/ic_medali"
            android:background="@android:color/transparent"
            android:text="Prestasi"
            android:drawableTint="@android:color/black"
            android:textAllCaps="false"
            android:textAlignment="center"
            tools:ignore="RtlCompat"
            android:layout_marginBottom="20dp"
            android:gravity="top"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view12"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/btnOrganisasi"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_organisasi"
            android:drawableTint="@android:color/black"
            android:text="Organisasi"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:gravity="top"
            tools:ignore="RtlCompat" />

    </LinearLayout>
</RelativeLayout>