            android:layout_width="0dp"
            android:layout_height="72dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintVertical_bias=".023"
            app:layout_constraintWidth_percent=".9">

            <View
                android:id="@+id/garis"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="#DDDDDD" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/ic_baseline_person_16"
                android:drawablePadding="6dp"
                android:fontFamily="@font/ubunturegular"
                android:gravity="center_vertical"
                android:text="NPM : "
                android:textAlignment="gravity"
                android:textColor="@android:color/black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/NPM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="4dp"
                android:drawableEnd="@drawable/ic_baseline_person_16"
                android:drawablePadding="6dp"
                android:drawableTint="@android:color/transparent"
                android:fontFamily="@font/ubunturegular"
                android:gravity="center_vertical"
                android:text=""
                android:textAlignment="gravity"
                android:textColor="@android:color/black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/angkatanDtDr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/NPM"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/ic_baseline_verified_user_24"
                android:drawablePadding="6dp"
                android:fontFamily="@font/ubunturegular"
                android:gravity="center_vertical"
                android:text=""
                android:textAlignment="gravity"
                android:textColor="@android:color/black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/prodiDtDr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/angkatanDtDr"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/ic_baseline_flag_16"
                android:drawablePadding="6dp"
                android:fontFamily="@font/ubunturegular"
                android:gravity="center_vertical"
                android:text=""
                android:textAlignment="gravity"
                android:textColor="@android:color/black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/kotaDtDr"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/angkatanDtDr"
                android:layout_alignStart="@+id/garis"
                android:layout_marginStart="6dp"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/ic_baseline_location_on_24"
                android:drawablePadding="6dp"
                android:fontFamily="@font/ubunturegular"
                android:gravity="center_vertical"
                android:text=""
                android:textAlignment="gravity"
                android:textColor="@android:color/black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/noDtDr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/NPM"
                android:layout_alignStart="@+id/garis"
                android:layout_marginStart="6dp"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/ic_baseline_local_phone_24"
                android:drawablePadding="6dp"
                android:fontFamily="@font/ubunturegular"
                android:gravity="center_vertical"
                android:text=""
                android:textAlignment="gravity"
                android:textColor="@android:color/black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/kelas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/garis"
                android:layout_marginStart="6dp"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/ic_baseline_people_alt_24"
                android:drawablePadding="6dp"
                android:fontFamily="@font/ubunturegular"
                android:gravity="center_vertical"
                android:text="Kelas"
                android:textAlignment="gravity"
                android:textColor="@android:color/black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/kelasDtDr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/kelas"
                android:drawableEnd="@drawable/ic_baseline_people_alt_24"
                android:drawablePadding="6dp"
                android:drawableTint="@android:color/transparent"
                android:fontFamily="@font/ubunturegular"
                android:gravity="center_vertical"
                android:text=""
                android:textAlignment="gravity"
                android:textColor="@android:color/black"
                android:textSize="12dp" />
        </RelativeLayout>

        <LinearLayout
