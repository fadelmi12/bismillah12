<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/txtKodeS1"
            android:gravity="center"
            android:textAlignment="center"
            android:text="TI19101"
            android:layout_marginStart="10dp"
            android:textColor="@android:color/black"
            android:layout_width="70dp"
            android:fontFamily="@font/ubunturegular"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/txtNamaS1"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:text="Praktik Pemrograman Mobile"
            android:fontFamily="@font/ubunturegular"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/txtSKSS1"
            android:textAlignment="center"
            android:text="4"
            android:fontFamily="@font/ubunturegular"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/txtNilaiAngkaS1"
            android:gravity="center"
            android:textAlignment="center"
            android:text="4"
            android:textColor="@android:color/black"
            android:fontFamily="@font/ubunturegular"
            android:layout_width="80dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/txtNilaiHurufS1"
            android:text="A"
            android:fontFamily="@font/ubunturegular"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_width="80dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/txtTotalNilaiS1"
            android:text="16"
            android:gravity="center"
            android:textAlignment="center"
            android:fontFamily="@font/ubunturegular"
            android:textColor="@android:color/black"
            android:layout_width="80dp"
            android:layout_height="match_parent"/>
    </LinearLayout>


</LinearLayout>