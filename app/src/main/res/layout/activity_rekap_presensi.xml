<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityRekapPresensi"
    android:background="@color/white">

<Button
    android:id="@+id/ubhdtdrpresensi"
    android:layout_width="0dp"
    android:layout_height="25dp"
    android:layout_marginStart="18dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/roundcorner"
    android:drawableStart="@drawable/ic_baseline_edit_24"

    android:drawableTint="@color/white"
    android:fontFamily="@font/ubunturegular"
    android:text="ubah data diri"
    android:gravity="center"
    android:textColor="@color/white"
    android:paddingLeft="14dp"
    android:textSize="12dp"
    android:textStyle="bold"
    android:paddingRight="7dp"
    app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
    app:layout_constraintEnd_toStartOf="@+id/btnktp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/relativeLayout2" />

<Button
    android:id="@+id/btnktp"
    android:layout_width="0dp"
    android:layout_height="25dp"
    android:layout_alignParentRight="true"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="18dp"
    android:background="@drawable/roundcorner"
    android:drawableStart="@drawable/ic_baseline_publish_24"
    android:drawableTint="@color/white"
    android:paddingLeft="14dp"
    android:paddingRight="7dp"
    android:fontFamily="@font/ubunturegular"
    android:gravity="center"
    android:text="upload Scan ktp"
    android:textColor="@color/white"
    android:textSize="12dp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/ubhdtdrpresensi"
    app:layout_constraintTop_toBottomOf="@+id/relativeLayout2" />
<RelativeLayout
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="@color/ungu"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">



    <Button
        android:id="@+id/btn_backHomePresensi"
        android:layout_centerVertical="true"
        android:layout_marginLeft="35dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/ic_baseline_arrow_back_ios_24"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/ubunturegular"
        android:text="Rekap Presensi"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        android:textStyle="bold" />
</RelativeLayout>

<LinearLayout
    android:id="@+id/linearLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/ubunturegular"
        android:text="STATUS STUDI : "
        android:textColor="@android:color/black"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/statusRekap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundorg"
        android:fontFamily="@font/ubunturegular"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="14dp"
        android:textStyle="bold" />
</LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/relativeLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias=".023"
        app:layout_constraintWidth_percent=".9">

        <View
            android:id="@+id/garis"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="#DDDDDD" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/ic_baseline_person_16"
            android:drawablePadding="6dp"
            android:fontFamily="@font/ubunturegular"
            android:gravity="center_vertical"
            android:text="NPM : "
            android:textAlignment="gravity"
            android:textColor="@android:color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/NPM3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_baseline_person_16"
            android:drawableTint="@android:color/transparent"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="4dp"
            android:drawablePadding="6dp"
            android:fontFamily="@font/ubunturegular"
            android:gravity="center_vertical"
            android:textAlignment="gravity"
            android:textColor="@android:color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/angkatanRekap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NPM3"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/ic_baseline_verified_user_24"
            android:drawablePadding="6dp"
            android:fontFamily="@font/ubunturegular"
            android:gravity="center_vertical"
            android:text=""
            android:textAlignment="gravity"
            android:textColor="@android:color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/prodiRekap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/angkatanRekap"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/ic_baseline_flag_16"
            android:drawablePadding="6dp"
            android:fontFamily="@font/ubunturegular"
            android:gravity="center_vertical"
            android:text=""
            android:textAlignment="gravity"
            android:textColor="@android:color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/kotaRekap"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/angkatanRekap"
            android:layout_alignStart="@+id/garis"
            android:layout_marginStart="6dp"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/ic_baseline_location_on_24"
            android:drawablePadding="6dp"
            android:fontFamily="@font/ubunturegular"
            android:gravity="center_vertical"
            android:text=""
            android:textAlignment="gravity"
            android:textColor="@android:color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/noRekap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NPM3"
            android:layout_alignStart="@+id/garis"
            android:layout_marginStart="6dp"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/ic_baseline_local_phone_24"
            android:drawablePadding="6dp"
            android:fontFamily="@font/ubunturegular"
            android:gravity="center_vertical"
            android:text=""
            android:textAlignment="gravity"
            android:textColor="@android:color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/kelas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/garis"
            android:layout_marginStart="6dp"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/ic_baseline_people_alt_24"
            android:drawablePadding="6dp"
            android:fontFamily="@font/ubunturegular"
            android:gravity="center_vertical"
            android:text="Kelas"
            android:textAlignment="gravity"
            android:textColor="@android:color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/kelasRekap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/kelas"
            android:drawablePadding="6dp"
            android:fontFamily="@font/ubunturegular"
            android:gravity="center_vertical"
            android:drawableTint="@android:color/transparent"
            android:drawableEnd="@drawable/ic_baseline_person_16"
            android:textAlignment="gravity"
            android:textColor="@android:color/black"
            android:textSize="12dp" />
    </RelativeLayout>

<LinearLayout
    android:id="@+id/linearLayout2"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/ubhdtdrpresensi"
    app:layout_constraintWidth_percent=".9"
    android:layout_marginTop="15dp">
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginRight="5dp"
                    android:text="Tahun Akademik"
                    android:layout_width="150dp"
                    android:gravity="center"

                    android:textColor="@android:color/black"
                    android:fontFamily="@font/ubunturegular"
                    android:layout_height="30dp"/>
                <TextView
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="Semester"
                    android:fontFamily="@font/ubunturegular"
                    android:layout_width="100dp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:background="#d7fbe8"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:fontFamily="@font/ubunturegular"
                    android:text="Hadir"
                    android:layout_width="80dp"
                    android:gravity="center"
                    android:layout_height="match_parent"/>
                <TextView
                    android:background="#fffcca"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:text="Izin"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/ubunturegular"
                    android:layout_width="80dp"
                    android:gravity="center"
                    android:layout_height="match_parent"/>
                <TextView
                    android:background="#fffcca"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:text="Sakit"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/ubunturegular"
                    android:layout_width="80dp"
                    android:gravity="center"
                    android:layout_height="match_parent"/>
                <TextView
                    android:background="#f6c7c7"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:text="Alpha"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/ubunturegular"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginRight="5dp"
                    android:text="Kosong"
                    android:fontFamily="@font/ubunturegular"
                    android:textColor="@android:color/black"
                    android:layout_width="80dp"
                    android:gravity="center"
                    android:layout_height="match_parent"/>
            </TableRow>

            <ListView
                android:id="@+id/listViewPresensi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/listview_presensi" />
        </TableLayout>
    </HorizontalScrollView>

</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>