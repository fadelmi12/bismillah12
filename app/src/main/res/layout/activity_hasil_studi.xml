<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HasilStudi"
    android:background="@color/white">

    <Button
        android:id="@+id/ubhdtortu"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/roundcorner"
        android:drawableStart="@drawable/ic_baseline_edit_24"
        android:drawableTint="@color/white"
        android:fontFamily="@font/ubunturegular"
        android:text="ubah data diri"
        android:gravity="center"
        android:textColor="@color/white"
        android:paddingLeft="14dp"
        android:textSize="12dp"
        android:textStyle="bold"
        android:paddingRight="7dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toStartOf="@+id/btnktp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2" />

    <Button
        android:id="@+id/btnktp"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/roundcorner"
        android:drawableStart="@drawable/ic_baseline_publish_24"
        android:drawableTint="@color/white"
        android:paddingLeft="14dp"
        android:paddingRight="7dp"
        android:fontFamily="@font/ubunturegular"
        android:gravity="center"
        android:text="upload Scan ktp"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ubhdtortu"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2" />
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/ungu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_backdtdr"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/ic_baseline_arrow_back_ios_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/ubunturegular"
            android:text="Hasil Studi"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/ubunturegular"
            android:text="STATUS STUDI : "
            android:textColor="@android:color/black"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundorg"
            android:fontFamily="@font/ubunturegular"
            android:text=" AKTIF "
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/relativeLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias=".023"
        app:layout_constraintWidth_percent=".9">

        <View
            android:id="@+id/garis"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="#DDDDDD" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/ic_baseline_person_16"
            android:drawablePadding="6dp"
            android:fontFamily="@font/ubunturegular"
            android:gravity="center_vertical"
            android:text="NPM : "
            android:textAlignment="gravity"
            android:textColor="@android:color/black"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/NPM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="7dp"
            android:drawablePadding="6dp"
            android:fontFamily="@font/ubunturegular"
            android:gravity="center_vertical"
            android:text="193307068"
            android:textAlignment="gravity"
            android:textColor="@android:color/black"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/angkatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NPM"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/ic_baseline_verified_user_24"
            android:drawablePadding="6dp"
            android:fontFamily="@font/ubunturegular"
            android:gravity="center_vertical"
            android:text="Angkatan 2019"
            android:textAlignment="gravity"
            android:textColor="@android:color/black"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/prodi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/angkatan"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/ic_baseline_flag_16"
            android:drawablePadding="6dp"
            android:fontFamily="@font/ubunturegular"
            android:gravity="center_vertical"
            android:text="D-III Teknologi Informasi"
            android:textAlignment="gravity"
            android:textColor="@android:color/black"
            android:textSize="11dp" />

        <TextView
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/angkatan"
            android:layout_alignStart="@+id/garis"
            android:layout_marginStart="6dp"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/ic_baseline_location_on_24"
            android:drawablePadding="6dp"
            android:fontFamily="@font/ubunturegular"
            android:gravity="center_vertical"
            android:text="Kota Madiun"
            android:textAlignment="gravity"
            android:textColor="@android:color/black"
            android:textSize="11dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NPM"
            android:layout_alignStart="@+id/garis"
            android:layout_marginStart="6dp"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/ic_baseline_local_phone_24"
            android:drawablePadding="6dp"
            android:fontFamily="@font/ubunturegular"
            android:gravity="center_vertical"
            android:text="0895329990656"
            android:textAlignment="gravity"
            android:textColor="@android:color/black"
            android:textSize="11dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/garis"
            android:layout_marginStart="6dp"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/ic_baseline_people_alt_24"
            android:drawablePadding="6dp"
            android:fontFamily="@font/ubunturegular"
            android:gravity="center_vertical"
            android:text="Kelas 3C"
            android:textAlignment="gravity"
            android:textColor="@android:color/black"
            android:textSize="11dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tablayout"
        android:layout_width="0dp"
        android:layout_height="400dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ubhdtortu"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        app:layout_constraintWidth_percent=".9">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:background="@drawable/roundcorner">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilih Semester"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:fontFamily="@font/ubunturegular"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">
            <Button
                android:id="@+id/btnSmt1"
                android:layout_width="30dp"
                android:fontFamily="@font/ubunturegular"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="1"/>
            <Button
                android:id="@+id/btnSmt2"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/ubunturegular"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                android:text="2"/>
            <Button
                android:id="@+id/btnSmt3"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/ubunturegular"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                android:text="3"/>
            <Button
                android:id="@+id/btnSmt4"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/ubunturegular"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                android:text="4"/>
            <Button
                android:id="@+id/btnSmt5"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/ubunturegular"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                android:text="5"/>
            <Button
                android:id="@+id/btnSmt6"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/ubunturegular"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                android:text="6"/>
            </LinearLayout>
        </RelativeLayout>
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>