<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/noBahasa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:fontFamily="@font/ubunturegular"
                android:textStyle="bold"
                android:layout_marginStart="10dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="120dp"
            android:layout_height="62dp"
            android:layout_marginStart="10dp"
            android:id="@+id/txtNamaBahasa"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:text="Bahasa Kuvukiland"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/ubunturegular" />
        <TextView
            android:layout_width="60dp"
            android:layout_height="62dp"
            android:id="@+id/txtPeriodeBahasa"
            android:text="2020/2021"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:fontFamily="@font/ubunturegular"
            android:textStyle="bold"
            android:layout_marginStart="10dp"/>
        <TextView
            android:layout_width="60dp"
            android:layout_height="62dp"
            android:id="@+id/txtTahunBahasa"
            android:text="2021"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:fontFamily="@font/ubunturegular"
            android:textStyle="bold"
            android:layout_marginStart="10dp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="62dp"
            android:id="@+id/txtSkorBahasa"
            android:text="666"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:fontFamily="@font/ubunturegular"
            android:textStyle="bold"
            android:layout_marginStart="10dp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="62dp"
            android:id="@+id/txtTanggalBahasa"
            android:text="12 Desember 2021"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:fontFamily="@font/ubunturegular"
            android:textStyle="bold"
            android:layout_marginStart="10dp"/>
    </LinearLayout>


</LinearLayout>